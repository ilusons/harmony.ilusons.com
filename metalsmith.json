{
    "destination": "./public",
    "metadata": {
        "title": "harmony",
        "description": "harmony | ilusons",
        "author": "harmony",
        "subtitle": "harmony | ilusons",
        "url": "http://harmony.ilusons.com",
        "site": {
            "title": "harmony",
            "description": "harmony | ilusons",
            "author": "harmony",
            "url": "http://harmony.ilusons.com"
        }
    },
    "plugins": {
        "metalsmith-define": {
            "production": true
        },
        "metalsmith-env": {},
        "metalsmith-build-date": true,
        "metalsmith-page-titles": true,
        "metalsmith-drafts": true,
        "metalsmith-filemetadata": [
            { "pattern": "**.md", "metadata": { }, "preserve": true }
        ],
        "metalsmith-markdown": {
            "smartypants": true,
            "gfm": true,
            "tables": true
        },
        "metalsmith-just-a-moment": {
            "pattern": ["**.md"],
            "scanFiles": true,
            "scanMetadata": true
        },
        "metalsmith-typography": {
            "lang": "en"
        },
        "metalsmith-permalinks": {
            "pattern": ":title"
        },
        "metalsmith-collections": {
        },
        "metalsmith-excerpts": true,
        "metalsmith-pagination": {
        },
        "metalsmith-publish": {
        },
        "metalsmith-sass": {},
        "metalsmith-layouts": {
            "engine": "handlebars",
            "rename": true,
            "partials": "layouts/partials"
        },
        "metalsmith-metallic": true,
        "metalsmith-broken-link-checker": false,
        "metalsmith-html-minifier": {
            "_metalsmith_if": "production",
            "removeAttributeQuotes": false,
            "keepClosingSlash": true
        },
        "metalsmith-eslint": {},
        "metalsmith-rssfeed": {
            "collectionKey": "public",            
            "siteUrl": "http://harmony.ilusons.com",
            "name": "rss.xml"
        },
        "metalsmith-mapsite": {
            "hostname": "http://harmony.ilusons.com"
        }
    }
}